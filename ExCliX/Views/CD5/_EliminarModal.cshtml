@model ExCliX.Models.Cliente

<style>
    .modal {
        display: flex;
        background-color: gray;
        position: absolute;
        width: 500px;
        height: 200px;
        border-radius: 5px;
        padding: 0;
    }

    .overlay {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(3px);
        z-index: 1;
    }

    .hidden {
        display: none;
    }
</style>

<div class="container modal bg-light hidden p-3">
    <div class="col">
        <div class="row w-100 h-75 m-0 p-0">
            <div class="row text-left">
                <p class="h3 text-center">Confirmar exclusão?</p>
            </div>
            <div class="row mx-auto w-50 text-left">
                <p class="m-0">Id: @Model.Id</p>
                <p>Nome: @Model.Nome</p>
            </div>
        </div>
        <div class="row w-100 h-25 m-0 button-box gap-2">
            <div class="col p-0">
                <button id="btnConfirm" class="btn btn-danger btn-lg w-100" type="submit">Eliminar</button>
            </div>
            <div class="col p-0">
                <a id="btnClose" class="btn btn-secondary btn-lg w-100">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<div class="overlay hidden"></div>

<script src="~/js/eliminar.js"></script>
