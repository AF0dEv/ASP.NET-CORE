@model EquipasMembros.Models.Membro

@{
    ViewData["Title"] = "Delete";
}
<h1 class="h1 text-black">Delete</h1>

<h3 class="h3 text-black-50">Tem a certeza que quer apagar este</h3>
<div>
    <h4 class="h4 text-black-50">Membro?</h4>
    <hr />
    <ul class="list-group">
        <li class="list-group-item list-group-item-dark">
            <text class="fw-bold">Nome Membro:</text>
  
            @Html.DisplayFor(model => model.NomeMembro)
        </li>
        <li class="list-group-item list-group-item-dark">
            <text class="fw-bold">Equipa:</text>

            @Html.DisplayFor(model => model.Equipa.Id)
        </li>
    </ul>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="link-light" asp-action="Index">Back to List</a>
    </form>
</div>
