@model EquipasMembros.Models.Membro

@{
    ViewData["Title"] = "Delete";
}
<style>
    mark {
        background-color: blue;
        color: white;
    }
</style>

<h1 class="h1 text-black">Delete</h1>

<h3 class="h3 text-black-50">Tem a certeza que quer apagar este</h3>
<div>
    <h4 class="h4 text-black-50">Membro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-black">
            Nome Membro:
        </dt>
        <dd class = "col-sm-10">
            <mark>@Html.DisplayFor(model => model.NomeMembro)</mark>
        </dd>
        <dt class="col-sm-2 text-black">
            Equipa:
        </dt>
        <dd class = "col-sm-10">
            <mark>@Html.DisplayFor(model => model.Equipa.Id)</mark>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="link-light" asp-action="Index">Back to List</a>
    </form>
</div>
