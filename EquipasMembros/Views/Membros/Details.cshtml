@model EquipasMembros.Models.Membro

@{
    ViewData["Title"] = "Details";
}
<style>
    mark{
        background-color:blue;
        color: white;
    }
</style>

<h1 class="h1 text-black">Details</h1>

<div>
    <h4 class="h4 text-black-50">Membro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-black">
            Nome Membro:
        </dt>
        <dd class = "col-sm-10">
            <mark>@Html.DisplayFor(model => model.NomeMembro)</mark>
        </dd>
        <dt class="col-sm-2 text-black">
            Equipa:
        </dt>
        <dd class = "col-sm-10">
            <mark>@Html.DisplayFor(model => model.Equipa.Id)</mark>
